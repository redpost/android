<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	  package="com.etuxia.sign"
	  android:versionCode="2"
	  android:versionName="1.1">
	  <uses-sdk android:minSdkVersion="3" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <application android:label="@string/app_name" android:icon="@drawable/icon">
    <activity android:name="Sign"
              android:label="@string/app_name"
	      android:screenOrientation="portrait"
	      android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:finishOnTaskLaunch="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="DisableTouchScreen"
              android:label="@string/app_name"
	      android:screenOrientation="portrait"
              android:theme="@style/Theme.Transparent" android:finishOnTaskLaunch="true" android:excludeFromRecents="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
    <activity android:name="Corktop"
              android:label="@string/app_name"
	      android:screenOrientation="portrait"
	      android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
  </application>
</manifest> 
